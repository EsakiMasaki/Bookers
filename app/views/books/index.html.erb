<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show","books/#{book.id}" %></td>
      <td><%= link_to "Edit","books/#{book.id}/edit" %></td>
      <td><%= link_to "Destroy","books/#{book.id}" %></td>
    </tr>
  <% end %>
</table>


<h2>New book</h2>
<%= form_with model: @book, url: "books" ,method: :post do |f| %>
  Title
  <%= f.text_field :title %>
  Body
  <%= f.text_area :body %>
  <%= f.submit "Create Book" %>
<% end %>
